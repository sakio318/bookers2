<div class="container">
<div class="row">
      <% if @book.errors.any? %>
        <div id="errors_explanation" class="alert alert-danger">
          <p>error</p>
            <%= @book.errors.count %>件のエラーが発生しました
            <ul>
              <% @book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
            <% end %>
            </ul>
        </div>
      <% end %>
      
      <div class="col-lg-4" style="background-color: #f0fff0">
      <div class="side-bar">
          <%= render 'layouts/bookers2', user:@user ,new_book:@new %>
      </div>
      </div>
      <div class="col-lg-8">
      <div class"books-index">
        <div class ="index-title">
        <h2>Books</h2>
        </div>
      
        <table class="table table-strip">
          <tr>
            <th>Title</th>
            <th>Opinion</th>
          </tr>
          <tr>
             <% @books.each do |book| %>
              <th>
                 <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
              </th>
              <th>
                <%= book.user.name %>
              </th>
              <th>
                <%= link_to book_path(book.id) do %>
                <%= book.title %>
                <% end %>
              </th>
              <th>
                <%= book.body %>
              </th>
          </tr>
          <% end %>
        </table>
      </div>
    </div>
  </div>
  </div>