<h1>Books画面</h1>


<div　class = "post-book">
<h2>New book</h2>
<%= form_with model:@book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit'Create　Book' %>
<% end %>
</div>

<div class"books-index">
  <div class ="index-title">
  <h2>Books</h2>
  </div>

  <table>
    <tr class ="table-tr">
      <th class="table-th">Title</th>
      <th class="table-th">Opinion</th>
    </tr>
    
     <tr class ="table-tr">
       <%= @books.each do |book| %>
      <th class="table-th">
        <%= book.user.name %>
      </th>
     <th class="table-th">
        <%= link_to book_path(book.id) do %>
        <%= book.title %>
        <% end %>
      </th>
      <th class="table-th">
        <%= book.body %>
      </th>
      <% end %>
    </tr>
  </table>
</div>
