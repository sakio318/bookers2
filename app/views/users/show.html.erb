<div class="container">
  <div class="row">
    <div class="col-md-3">
      <!--<div class="side-bar">-->
        <%= render 'layouts/bookers2', user:@user ,new_book:@new_book %>
      <!--</div>-->
    <!--</div>-->

    <div class="col-md-9">
      <!--<div class"books-index">-->
        <!--<div class ="index-title">-->
          <h2>Books</h2>
        <!--</div>-->

        <table class="table table-striped">
          <thead>
            <tr>
              <th>Title</th>
              <th>Opinion</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <% @books.each do |book| %>
              <tr>
                <td>
                  <%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %>
                </td>
                <td>
                  <%= @user.name %>
                </td>
                <td>
                  <%= link_to book_path(book.id) do %>
                    <%= book.title %>
                  <% end %>
                </td>
                <td>
                  <%= book.body %>
                </td>
                <% if @user.id == current_user.id %>
                    <td>
                        <%= link_to "Destroy",book_path, method: :delete,class: "btn btn-secondary btn-danger" %>
                    </td>
                    <td>
                        <%= link_to "Edit",edit_book_path(book.id),class: "btn btn-secondary btn-info" %>
                    </td>
                    <% end %>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>

