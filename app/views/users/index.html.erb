<% if @book.errors.any? %>
  <div id="errors_explanation" class="alert alert-danger">
    <p>error</p>
      <%= @book.errors.count %>件のエラーが発生しました
      <ul>
        <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
      <% end %>
      </ul>
  </div>
<% end %>


<div class ="user-info">
    <h2>User info</h2>
<div class="user-name">
    <p><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></p>
    <p>name</p><%= @user.name %>
    <p>introduction</p><%= @user.introduction %>
    <p><%= link_to "edit" , edit_user_path(@user) %></p>
</div>
</div>


<div　class = "post-book">
<h2>New book</h2>
<%= form_with model:@new_book, local:true do |f| %>
<h4>Title</h4>
<%= f.text_field :title %>
<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit'Create　Book' %>
<% end %>
</div>

<div class="user-index">
    <div class="user-title">
        <h4>Users</h4>
    </div>
    <table>
        <tr class ="table-tr">
             <th class="table-th">image</th>
          <th class="table-th">name</th>
        </tr>
        <tr class ="table-tr">
           <% @users.each do |user| %>
          <th class="table-th"><%= user.profile_image %></th>
          <th class="table-th"><%= user.name %></th>
          <th class="table-th"><%= link_to "Show", user_path(user.id) %></th>
          <% end %>
    </table>
</div>