<div class="container">
<div class="row">
  <% if @book.errors.any? %>
    <div id="errors_explanation" class="alert alert-danger">
      <p>error</p>
        <%= @book.errors.count %>件のエラーが発生しました
        <ul>
          <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
        </ul>
    </div>
  <% end %>
  <div class="col-md-3" style="background-color: #f0fff0">
  <div class="side-bar">
      <%= render 'layouts/bookers2', user:@user ,new_book:@new_book %>
  </div>
  </div>

  <div class="col-md-9">
      <div class="user-title">
          <h2>Users</h4>
      </div>
      <table class="table table-striped">
          <tr>
            <th>image</th>
            <th>name</th>
          </tr>
          <tr>
             <% @users.each do |user| %>
            <th><%= attachment_image_tag @user, :profile_image, fallback: "no_image.jpg", size: "60x60" %></th>
            <th><%= user.name %></th>
            <th><%= link_to "Show", user_path(user.id),class: "btn btn-secondary" %></th>
          </tr>
            <% end %>
      </table>
  </div>
  </div>
</div>
</div>